\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{components/terminal}[2025/11/25 Genesis Terminal]

\RequirePackage{tcolorbox}
\tcbuselibrary{listings, skins}
\RequirePackage{styles/colors}
\RequirePackage{styles/typography}

% =======================================================================
% 1. THE SYNTAX HIGHLIGHTER
% =======================================================================
\lstdefinestyle{genesis_syntax}{
    language=Java,
    basicstyle=\ttfamily\small\color{term_green},
    keywordstyle=\color{code_keyword}\bfseries,
    stringstyle=\color{code_string},
    commentstyle=\color{code_comment}\itshape,
    numberstyle=\tiny\color{code_comment},
    numbers=left,
    stepnumber=1,
    breaklines=true,
    showstringspaces=false,
    tabsize=2,
    frame=none
}

% =======================================================================
% 2. THE TERMINAL WINDOW
% =======================================================================
\newtcblisting{genesisblock}[2][]{
    enhanced,
    colback=term_bg,
    colframe=mit_charcoal,
    colupper=term_green,
    arc=1mm,
    boxrule=0.5pt,
    left=6mm,
    title={\ttfamily \scriptsize \faTerminal \hspace{2mm} #2},
    coltitle=header_text,
    attach boxed title to top left={xshift=0mm, yshift=0mm},
    boxed title style={frame hidden, colback=header_bg, sharp corners=south},
    listing only,
    listing options={style=genesis_syntax},
    drop shadow,
    #1
}

