\ProvidesPackage{styles/colors}[2025/11/25 Genesis Protocol Color Palette v2]

\RequirePackage{xcolor}

% =======================================================================
% 1. THE PRIMITIVES (THE DNA)
% The absolute truth values for our brands.
% =======================================================================

% MIT "Mens et Manus"
\definecolor{mit_cardinal}{RGB}{163, 31, 52} 
\definecolor{mit_steel}{RGB}{138, 139, 140}
\definecolor{mit_charcoal}{RGB}{35, 31, 32}

% Enigma "The Machine"
\definecolor{enigma_bakelite}{RGB}{43, 30, 28} 
\definecolor{enigma_brass}{RGB}{184, 155, 89} 
\definecolor{ibm_mainframe}{RGB}{70, 95, 115} 
\definecolor{punch_card}{RGB}{245, 241, 222}

% System B "The Digital"
\definecolor{term_bg}{RGB}{30, 30, 30} 
\definecolor{term_green}{RGB}{57, 255, 20} 
\definecolor{term_amber}{RGB}{255, 176, 0} 

% =======================================================================
% 2. THE DERIVATIVES (THE VARIATIONS)
% Calculated variations to ensure tonal consistency.
% Usage: \colorlet{Name}{Base!Percent!MixTarget}
% =======================================================================

% -- Shadows (Mixed with Black/Charcoal) --
\colorlet{cardinal_deep}{mit_cardinal!70!black}      % Dark Red for borders
\colorlet{steel_shadow}{mit_steel!60!black}          % Dark Steel for text
\colorlet{bakelite_void}{enigma_bakelite!50!black}   % Almost black, warmer

% -- Tints (Mixed with White/Paper) --
\colorlet{cardinal_wash}{mit_cardinal!10!white}      % Very faint red background
\colorlet{brass_polished}{enigma_brass!40!white}     % Shiny brass
\colorlet{punch_card_fresh}{punch_card!50!white}     % Cleaner paper look

% -- The "Digital Glare" (Mixed with Terminal Green) --
\colorlet{term_glare}{term_green!20!term_bg}         % Subtle CRT glow on black
\colorlet{term_dim}{term_green!70!term_bg}           % Inactive text

% =======================================================================
% 3. THE SEMANTIC SPREAD (THE UI LAYER)
% Mapping the derivatives to the Interface Logic.
% =======================================================================

% --- DARK MODE (The "Bunker" Vibe) ---
% Background: Not pure black. Deep Bakelite mixed with Void.
\colorlet{ui_dark_bg}{bakelite_void} 
% Panels: The Terminal Background
\colorlet{ui_dark_panel}{term_bg}
% Text: Polished Brass (readable on dark) or Terminal Green
\colorlet{ui_dark_text_primary}{punch_card!90!term_bg}
\colorlet{ui_dark_text_accent}{term_green}
% Bubbles:
\colorlet{ui_dark_bubble_sys}{mit_charcoal!90!black} % System: Recedes into shadow
\colorlet{ui_dark_bubble_user}{cardinal_deep}        % User: Stands out, bold

% --- LIGHT MODE (The "Dossier" Vibe) ---
% Background: Fresh Punch Card (Warm White)
\colorlet{ui_light_bg}{punch_card_fresh}
% Panels: White Paper
\colorlet{ui_light_panel}{white}
% Text: Deep Charcoal (High Contrast)
\colorlet{ui_light_text_primary}{mit_charcoal}
\colorlet{ui_light_text_accent}{mit_cardinal}
% Bubbles:
\colorlet{ui_light_bubble_sys}{mit_steel!20!white}   % System: Metallic, light
\colorlet{ui_light_bubble_user}{ibm_mainframe}       % User: Corporate Blue/Grey

