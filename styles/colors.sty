\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{styles/colors}[2025/11/25 Genesis Protocol Color Palette v3 - Accessible]

\RequirePackage{xcolor}

% =======================================================================
% 1. THE PRIMITIVES (THE DNA)
% Core brand colors - these stay true
% =======================================================================

% MIT Official
\definecolor{mit_cardinal}{RGB}{163, 31, 52}       % The red - keep this
\definecolor{mit_steel}{RGB}{138, 139, 140}        % Mid-grey - good neutral
\definecolor{mit_charcoal}{RGB}{35, 31, 32}        % Almost black - good for text

% Industrial Era (Warmer, more readable)
\definecolor{enigma_bakelite}{RGB}{43, 30, 28}     % Deep brown-black
\definecolor{enigma_brass}{RGB}{184, 155, 89}      % Warm gold
\definecolor{ibm_mainframe}{RGB}{70, 95, 115}      % Cool blue-grey
\definecolor{punch_card}{RGB}{245, 241, 222}       % Warm off-white

% Terminal/Digital (More balanced)
\definecolor{term_bg}{RGB}{24, 24, 24}             % Slightly lighter for contrast
\definecolor{term_green}{RGB}{87, 255, 102}        % Brighter, more visible green
\definecolor{term_amber}{RGB}{255, 191, 64}        % Softer amber
\definecolor{term_cyan}{RGB}{102, 217, 239}        % Proper cyan for keywords

% =======================================================================
% 2. THE DERIVATIVES (THE VARIATIONS)
% Better balanced mixes for readability
% =======================================================================

% Shadows (Deeper, more defined)
\colorlet{cardinal_deep}{mit_cardinal!85!black}
\colorlet{steel_shadow}{mit_steel!70!black}
\colorlet{bakelite_void}{enigma_bakelite!80!black}

% Highlights (More visible)
\colorlet{cardinal_wash}{mit_cardinal!15!white}
\colorlet{brass_polished}{enigma_brass!60!white}
\colorlet{punch_card_fresh}{punch_card!80!white}

% Terminal effects (Better visibility)
\colorlet{term_glare}{term_green!30!term_bg}
\colorlet{term_dim}{term_green!60!term_bg}

% =======================================================================
% 3. THE SEMANTIC SPREAD (THE UI LAYER)
% High contrast, accessible combinations
% =======================================================================

% --- DARK MODE (The Default) ---
% Background: Deep but not pure black (better for screens)
\colorlet{ui_dark_bg}{black!92!enigma_bakelite}

% Panels: Distinct from background
\colorlet{ui_dark_panel}{black!85!mit_steel}

% Text: High contrast, warm undertone
\colorlet{ui_dark_text_primary}{punch_card!95!enigma_brass}
\colorlet{ui_dark_text_accent}{term_green}

% Bubbles: Clear visual distinction
\colorlet{ui_dark_bubble_sys}{mit_charcoal!60!ibm_mainframe}    % Cool blue-grey
\colorlet{ui_dark_bubble_user}{cardinal_deep}                    % Warm red

% --- LIGHT MODE (The Alternative) ---
% Background: Warm white, easier on eyes
\colorlet{ui_light_bg}{punch_card}

% Panels: Subtle depth
\colorlet{ui_light_panel}{white!95!mit_steel}

% Text: Deep charcoal with warmth
\colorlet{ui_light_text_primary}{mit_charcoal}
\colorlet{ui_light_text_accent}{mit_cardinal}

% Bubbles: Soft but distinct
\colorlet{ui_light_bubble_sys}{ibm_mainframe!25!white}          % Light blue-grey
\colorlet{ui_light_bubble_user}{mit_cardinal!80!white}          % Soft cardinal

% =======================================================================
% 4. SPECIAL PURPOSE COLORS
% For specific UI elements that need extra attention
% =======================================================================

% Header/Title bar
\colorlet{header_bg}{mit_charcoal}
\colorlet{header_text}{punch_card!90!enigma_brass}

% Code syntax (optimized for terminal block)
\colorlet{code_keyword}{term_cyan}
\colorlet{code_string}{term_amber}
\colorlet{code_comment}{mit_steel!80!white}
\colorlet{code_number}{term_green!80!term_amber}

% Interactive elements
\colorlet{button_bg}{mit_cardinal}
\colorlet{button_text}{white}
\colorlet{button_hover}{cardinal_deep}

\endinput